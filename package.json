{
  "name": "@vaykekaz/di-container",
  "version": "0.0.2",
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "jest",
    "prepack": "yarn run build",
    "_prepublish": "yarn run test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "reflect-metadata": "^0.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.1"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ]
  }
}
